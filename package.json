{
  "name": "mcp-proxy",
  "version": "1.0.0",
  "main": "./dist/commonjs/index.js",
  "scripts": {
    "build": "tshy && tshy-after",
    "clean": "tsc -b --clean",
    "test": "vitest run && prettier --check . && eslint .",
    "format": "prettier --write . && eslint --fix ."
  },
  "bin": {
    "mcp-proxy": "./dist/commonjs/bin/mcp-proxy.js"
  },
  "keywords": [
    "MCP",
    "SSE",
    "proxy"
  ],
  "type": "module",
  "author": "Frank Fiegel <frank@glama.ai>",
  "license": "MIT",
  "description": "A TypeScript SSE proxy for MCP servers that use stdio transport.",
  "module": "./dist/esm/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "eventsource": "^3.0.6",
    "yargs": "^17.7.2"
  },
  "repository": {
    "url": "https://github.com/punkpeye/mcp-proxy"
  },
  "homepage": "https://glama.ai/mcp",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@sebbo2002/semantic-release-jsr": "^2.0.5",
    "@tsconfig/node22": "^22.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.14.1",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-perfectionist": "^4.11.0",
    "express": "^5.0.1",
    "get-port-please": "^3.1.2",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tshy": "^1.1.1",
    "tshy-after": "^1.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/bin/mcp-proxy.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "source": "./src/index.ts",
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  }
}
